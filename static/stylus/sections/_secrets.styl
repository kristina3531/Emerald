.secrets
  padding 65px 0 90px
  background-size cover
  background-repeat no-repeat
  background-position center
  &::after
    content ''
    position absolute
    z-index 0
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(#000, .8)  
  .container
    position relative
    z-index 1
  .section-title
    margin-bottom 70px
  
  &-content
    display flex
    justify-content space-between
    align-items center
    max-width 944px
    margin 0 auto
  &-text
    max-width 450px
    color #fff
    &__title
      margin-bottom 25px
      font-size 28px
      line-height 1.3
  &-item
    font-weight 700
    font-size 28px
    margin-bottom 25px
    line-height 1.2
    &:last-child
      margin-bottom 0
  
  