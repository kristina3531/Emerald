.partner
  background-size cover
  background-repeat no-repeat
  background-position center
  &-photo
    width 260px
    height 220px
    margin 0 15px 50px
    &--width
      width 360px
    &__wrap
      display flex
      flex-wrap wrap
      justify-content center
  &-advantages
    color main-color
    display flex
    flex-wrap wrap
    justify-content center
    width 80%
    margin 0 auto
    &__step
      display flex
      width 30%
      margin 0 15px 30px
      &:nth-child(3)
        width 40%
      &--width
        width 55%
    &__number
      flex 0 0 auto
      margin-right 10px
      width 50px
      height 50px
      border 2px solid #fff
      border-radius 50%
      background-color main-color
      color #fff
      font-size 30px
      font-weight 700
      text-align center
      line-height 45px
    &__text
      line-height 1.3

  &-presentation
    text-align center
    &__text
      margin-bottom 15px
      color main-color
      font-family main-font
      font-size 22px
    .download__icon
      margin-right 5px
      width 20px
      height 20px
      fill #fff
      transition all .3s
      
    .global-btn
      &:hover
        .download__icon
          fill main-color