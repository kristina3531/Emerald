.sandwich
  margin-right 15px
  width 50px
  height 50px
  line-height 40px
  border 2px solid #fff
  border-radius 50%
  svg path
    stroke-width 30
    stroke-linecap round
    stroke #fff
    fill none
    transition all ease-in-out .5s
  .top_bar, .bottom_bar
    stroke-dasharray 240px 910px
  .middle_bar
    stroke-dasharray 240px 240px
  .open .top_bar, .open .bottom_bar
    stroke-dashoffset -650px
  .open .middle_bar
    stroke-dasharray 0px 220px
    stroke-dashoffset -120px

.global-btn
  cursor pointer
  padding 0 30px
  display inline-block
  height 50px
  font-size 24px
  line-height 46px
  border 2px solid #fff
  border-radius 25px
  color #fff
  background-color main-color
  transition all linear .3s
  &:hover
    background-color #fff
    color main-color
    border-color main-color
  &--small
    padding 0 20px
    height 30px
    line-height 25px
    font-size 18px
    border-radius 15px
  &--medium
    padding 0 25px
    font-size 20px


.section-title
  margin-bottom 25px
  color main-color-text
  font-family title-font
  font-size 42px
  text-align center
  &--white
    color #fff

.instagram
  svg
    width 35px
    height 35px
    margin-right 10px
  &-text
    font-size 28px
    color main-color-text
  &-hash-tag
    position relative
    display inline-block
    color main-color-text
    font-size 24px
    font-weight 700
    transition all .3s
    &::after
      content ''
      position absolute
      left 0
      bottom 10px
      width 100%
      height 3px
      transition all .3s
    &:hover
      &::after
        transform translateY(20px)
        background-color main-color-text

form, .form-success
  padding 45px 25px 60px  
  max-width 360px
  // height 450px
  color main-color
  text-align center
  border-radius 15px
  background-color #fff

.form
  &-group
    position relative
    margin-bottom 20px
    &:last-child
      margin-bottom 0
      margin-top 40px
    input[type="text"]
      display block
      width 100%
      padding 10px 10px 10px 35px
      border-radius 5px
      border 1px solid gray-color
      margin-bottom 5px
  &-icon
    position absolute
    left 10px
    top 12px
    width 18px
    height 18px
    fill gray-color
  &-title
    font-size 28px
    line-height 1.3
    color main-color
    margin-bottom 25px
  .global-btn
    padding 0 18px

  &-success
    display none
    position relative
    padding-top 230px
    &::before
      content ''
      position absolute
      top 0
      left 50%
      margin-left -115px
      background url('../img/general/success-form.jpg') no-repeat
      width 230px
      height 230px
    &.success-show
      display block
    &__text
      display block
      width 100%
      font-size 28px
      line-height 1.3

//Slick slider arrows
.slider
  &-controls
    cursor pointer
    position absolute
    top 50%
    z-index 1
    transform translateY(-50%)
    .arrow__icon
      width 27px
      height 45px
      fill rgba(#fff, .1)
      transition all .3s
      &:hover, &:active
        transform scale(1.5)
        fill rgba(#fff, 1)
  &-prev--reviews, &-prev--pricing
    left -10px
  &-next--reviews, &-next--pricing
    right -10px
    