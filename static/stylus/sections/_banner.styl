.banner
  min-height 550px
  background-repeat no-repeat
  background-position: center
  background-size: cover
  position relative

  &::after
    content ''
    position absolute
    left 0
    right 0
    bottom -2px
    height 21px
    background url('../img/general/wave-bottom-white.png') repeat-x 0 0

  &-text
    color #fff
    font-size 36px
    font-family title-font
    text-align center
    position absolute
    width 100%
    bottom 60px
    left 50%
    transform translateX(-50%)