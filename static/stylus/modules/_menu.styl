.header-nav

  &__list
    min-width 200px
    display none
    position absolute
    z-index 1
    width 220px
    top 70px
    left 0
    background-color #fff

  &__link
    display block
    padding 15px 15px 15px 20px
    color main-color
    border-bottom 1px solid main-color
    transition all linear .3s

    &:hover
      background-color main-color
      color #fff