.popup
  &-form
    max-width 360px
    width 90%
    margin 50px auto
    position relative
    .mfp-close
      display none
  &-close
    cursor pointer
    position absolute
    top -17px
    right -17px
    width 50px
    height 50px
    border 2px solid #fff
    border-radius 50%
    background-color main-color
    font-size 32px
    color #fff
    text-align center
    line-height 40px