.team
  padding 0
  background-repeat no-repeat
  background-position center
  background-size cover

  &::before
    content ''
    position absolute
    left 0
    top -21px
    right 0
    height 21px
    background url('../img/general/wave-top-team.png') repeat-x 0 0
    // background-size cover

  &::after
    content ''
    position absolute
    left 0
    z-index 2
    bottom -21px
    width 100%
    height 21px
    background url('../img/general/wave-bottom-team.png') no-repeat 0 0
    background-size cover

  &-content
    padding 60px 0
    // height 1140px
    color main-color-text
    background url('../img/general/team-line.png') no-repeat center
  
  &-founder
    margin 0 auto 42px
    max-width 746px
    display flex
    &__info
      margin-left 30px
    &__name
      font-size 24px
      font-weight 700
      margin-bottom 20px
    &__job
      display block
      line-height 1.2
      margin-bottom 10px
      &:last-of-type
        margin-bottom 15px
    &__text
      font-style italic
      line-height 1.2

  &-person
    margin-bottom 20px
    width 22%
    text-align center
    &:nth-child(even)
      padding-top 40px
    &__wrap
      display flex
      flex-wrap wrap
      justify-content center
    &__photo
      margin 0 auto 20px
      width 165px
      height 165px
      border-radius 50%
      border 2px solid main-color
      background-size cover
      &--founder
        margin-bottom 0
        width 260px
        height 260px
        flex 0 0 auto
    &__name
      font-size 20px
      font-weight 700
      margin-bottom 10px
    &__job
      display block
      font-size 16px
      line-height 1.2
