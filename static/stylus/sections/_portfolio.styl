.portfolio
  max-height 1160px
  background-repeat no-repeat
  background-position 0 0
  background-size cover

  &::before
    content ''
    position absolute
    left 0
    top -21px
    right 0
    height 21px
    background url('../img/general/wave-top-portfolio.png') repeat-x 0 0
    background-size cover

  &::after
    content ''
    position absolute
    left 0
    z-index 2
    bottom -21px
    width 100%
    height 21px
    background url('../img/general/wave-bottom-portfolio.png') no-repeat 0 0
    background-size cover

  &-list
    max-width 1000px
    width 100%
    margin 0 auto

    &::after
      content ''
      display block
      clear both

  &-item, &-sizer
    width 29%

  &-item
    margin-bottom 10px
    float left
    height 230px
    background-size cover
    background-position center

    &--width2
      width 39%

    &--height2
      height 460px

    &__search
      cursor pointer
      position absolute
      z-index 3
      right 10px
      bottom 10px
      width 30px
      height 30px
      text-align center
      line-height 22px
      border 2px solid #fff
      border-radius 50%
      background-color main-color

      &:hover
        .portfolio-item__icon
          transform scale(1.1)

    &__icon
      width 15px
      height 15px
      fill: #fff
      transition all .3s
    
    &__descr
      padding 15px 50px 15px 10px
      position absolute
      left 0
      right 0
      bottom 0
      background-color main-color
      text-align right
      opacity 0
      transition all .3s
      span
        color #fff

    &:hover
      .portfolio-item__descr
        opacity 1
  .instagram
    margin-top 15px
    text-align center
    &-hash-tag
      text-transform uppercase

