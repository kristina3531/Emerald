.pricing
  background-size cover
  background-position: center
  background-repeat no-repeat
  .slider-controls
    display none
  &-table
    margin-bottom 30px
    position relative
    &__item
      position relative
      margin 0 20px
      padding 15px 25px 30px
      max-width 360px
      height 540px
      background-color #fff
      border-radius 15px
      text-align center
      color main-color-text
      background-position center bottom
      background-repeat no-repeat
      background-size auto
      
    &__title
      font-size 24px
      line-height 1.2
      text-transform uppercase

      &::after
        content ''
        display block
        margin 15px auto
        width 85%
        height 1px
        background-color main-color
    
    &__descr
      margin-bottom 20px
      line-height 1.2

    &__list
      flex 1
      &-item
        margin-bottom 15px

    &__price
      position absolute
      bottom 30px
      left 50%
      margin-left -130px
      width 260px
      height 61px
      line-height 61px
      background url('../img/general/price-bg.png') no-repeat center/contain
      font-size 42px
      font-weight 700
      color #fff
      align-self flex-end

  &-order
    text-align center
    color #fff
    &__text
      margin-bottom 25px
      font-size 28px
    &__link
      color #fff
      font-weight 700
      transition all .3s
      position relative
      &::after
        content ''
        position absolute
        left 0
        bottom 10px
        width 100%
        height 3px
        transition all .3s
      &:hover
        &::after
          transform translateY(15px)
          background-color #fff


 